<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alejandro.app_02_mail.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">
    
    <EditText
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:hint="Recipient Email"
        android:id="@+id/et_to"

        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Subject"
        android:id="@+id/et_subj"

        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintRight_toRightOf="@+id/et_to"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/et_to"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/et_to" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Message"
        android:id="@+id/et_msg"
        android:inputType="textLongMessage"

        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintRight_toRightOf="@+id/et_to"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/et_to"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/et_to" />

    <Button
        android:layout_width="1in"
        android:layout_height="wrap_content"
        android:id="@+id/btn_submit"
        android:text="Send mail"


        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintRight_toRightOf="@+id/et_to"
        android:layout_marginTop="108dp"
        app:layout_constraintTop_toBottomOf="@+id/et_to"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/et_to" />

    />


</android.support.constraint.ConstraintLayout>
